# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Redirect to Home page
GET     /                           controllers.Default.redirect(to ="/home")

# Home page
GET     /home                       controllers.ApplicationController.home()

#Platforms page
GET     /platforms                  controllers.ApplicationController.platforms()

#Aggregators page
GET     /aggregators                controllers.ApplicationController.aggregators()

#How To page
GET     /howtoparticipate           controllers.ApplicationController.howTo()

#About page
GET     /about                      controllers.ApplicationController.about()

#Management page
GET     /management                 controllers.ApplicationController.management()

#Search page
GET     /search                     controllers.ApplicationController.search()

#Imprint page
GET     /imprint                     controllers.ApplicationController.imprint()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#Redirect to metrics page
GET     /metrics                    controllers.ApplicationController.metrics()