# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# ---- Basic Routing for navigation functionalities ---- #
#Redirect to Home page
GET     /                           controllers.Default.redirect(to ="/home")

# Home page
GET     /home                       controllers.ApplicationController.home()

#Platforms page (List all platforms)
#Add parameter for pagination with default value 1
GET     /platforms                  controllers.PlatformsController.platforms(page: Integer ?= 1)

#Aggregators page
GET     /aggregators                controllers.ApplicationController.aggregators()

#How To page
GET     /howtoparticipate           controllers.ApplicationController.howTo()

#About page
GET     /about                      controllers.ApplicationController.about()

#Management page
GET     /management                 controllers.ApplicationController.management()

#Search page
GET     /search                     controllers.ApplicationController.search()

#Imprint page
GET     /imprint                    controllers.ApplicationController.imprint()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#Redirect to metrics page
GET     /metrics                    controllers.ApplicationController.metrics()

#Cookie Policy
GET     /cookiepolicy               controllers.ApplicationController.cookies()

# ---- Special routes for Platforms page ----#
#Create a new platform
GET     /platforms/createnew        controllers.PlatformsController.createNewPlatform()

#Show the selected platform
GET     /platforms/:platformID      controllers.PlatformsController.showSelectedPlatform(platformID: String)

#Delete a platform
DELETE  /platforms/:platformID      controllers.PlatformsController.deletePlatform(platformID: String)

#Save a platform
POST    /platforms                  controllers.PlatformsController.savePlatform()